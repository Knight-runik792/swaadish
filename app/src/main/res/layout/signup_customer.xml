<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_gradient"
    android:layout_height="match_parent"
    tools:context=".signup_customer"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="192dp"
        android:text="Enter the following Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <EditText
        android:id="@+id/emailc"
        android:layout_width="358dp"
        android:layout_height="62dp"
        android:background="#ffeeee"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="#cc7722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.206" />

    <EditText
        android:id="@+id/phonec"
        android:layout_width="362dp"
        android:layout_height="60dp"
        android:background="#ffeeee"
        android:ems="10"

        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="#cc7722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailc"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/addressC"
        android:layout_width="350dp"
        android:layout_height="61dp"
        android:background="#ffeeee"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"

        android:textColor="@color/black"
        android:textColorHint="#cc7722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonec"
        app:layout_constraintVertical_bias="0.073" />

    <EditText
        android:id="@+id/passwordc"
        android:layout_width="355dp"
        android:layout_height="59dp"
        android:background="#ffeeee"
        android:ems="10"
        android:hint="Password"
        android:inputType="numberPassword"

        android:textColor="@color/black"
        android:textColorHint="#cc7722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressC"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/signupC"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:height="10dp"
        android:background="@drawable/login_opt_buttons"
        android:text="signup"
        android:textColorHint="#cc7722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordc"
        app:layout_constraintVertical_bias="0.425" />

    <EditText
        android:id="@+id/namec"
        android:layout_width="364dp"
        android:layout_height="62dp"
        android:background="#ffeeee"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColorHint="#cc7722"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        app:layout_constraintBottom_toTopOf="@+id/emailc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="167dp"
        android:layout_height="134dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/_97c34021853531fdbd946ba380a5dc8" />

</androidx.constraintlayout.widget.ConstraintLayout>