<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_gradient"
    android:layout_height="match_parent"
    tools:context=".signup_customer">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="192dp"
        android:text="Enter the following Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245" />

    <EditText
        android:id="@+id/emailc"
        android:layout_width="358dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint=" Email Address"
        android:textColor="@color/black"
        android:textColorHint="#cc7722"
        android:background="#ffeeee"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.206" />

    <EditText
        android:id="@+id/phonec"
        android:layout_width="362dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint=" Phone Number"
        android:inputType="phone"
        android:background="#ffeeee"
        android:textColor="@color/black"
        android:textColorHint="#cc7722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailc"
        app:layout_constraintVertical_bias="0.077" />

    <EditText
        android:id="@+id/addressC"
        android:layout_width="350dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint=" Address"
        android:background="#ffeeee"
        android:textColor="@color/black"

        android:textColorHint="#cc7722"
        android:inputType="textPostalAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonec"
        app:layout_constraintVertical_bias="0.093" />

    <EditText
        android:id="@+id/passwordc"
        android:layout_width="355dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint=" Password"
        android:background="#ffeeee"
        android:textColor="@color/black"

        android:textColorHint="#cc7722"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressC"
        app:layout_constraintVertical_bias="0.113" />

    <Button
        android:id="@+id/signupC"
        android:layout_width="314dp"
        android:layout_height="33dp"
        android:background="@drawable/login_opt_buttons"
        android:text="signup"
        android:textColor="@color/white"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordc"
        app:layout_constraintVertical_bias="0.448" />

    <EditText
        android:id="@+id/namec"
        android:layout_width="364dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint=" Full Name"
        android:background="#ffeeee"
        android:textColorHint="#cc7722"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/emailc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="167dp"
        android:layout_height="134dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/_97c34021853531fdbd946ba380a5dc8" />

</androidx.constraintlayout.widget.ConstraintLayout>